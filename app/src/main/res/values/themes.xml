<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Inventura" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="buttonStyle">@style/ButtonColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/secondary_light</item>
        <item name="background">@color/secondary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="tabIndicatorColor">@color/secondary_dark</item>
        <item name="tabSelectedTextColor">@color/secondary_dark</item>"

        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/secondary</item>
    </style>

    <style name="CardColors">
        <item name="android:background">@color/secondary_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayoutColor">
        <item name="backgroundTint">@color/secondary_light</item>
    </style>
</resources>